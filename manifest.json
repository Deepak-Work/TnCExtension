{
    "manifest_version": 3,
    "name": "TnC Summarizer",
    "description": "A Chrome extension that summarizes terms and conditions.",
    "version": "1.0",
    "permissions": [
        "activeTab","scripting", "storage"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
        "service_worker":  "src/frontend/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/frontend/content.js"],
            "type": "module"
        }
    ],
    "action": {
        "default_popup": "src/frontend/public/popup.html",
        "default_icon": {
            "16" : "src/frontend/public/icons/icon.png",
            "48" : "src/frontend/public/icons/icon.png",
            "128" : "src/frontend/public/icons/icon.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "config/*"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}